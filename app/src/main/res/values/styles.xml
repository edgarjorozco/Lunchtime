<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LogoHeader">
        <item name="android:textSize">@dimen/logo_header_text_size</item>
        <item name="android:textColor">@color/at_light_grey</item>
    </style>

    <style name="LunchtimeButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LunchtimeButton.Plain">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="LunchtimeHeaderText">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/at_grey</item>
    </style>

    <style name="LunchtimeDetailText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/at_light_grey</item>
    </style>

    <style name="LunchtimeRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/at_yellow</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:secondaryProgressTint">@color/transparent</item>
        <item name="android:progressBackgroundTint">@color/at_grey</item>

    </style>

    <style name="LunchtimeDetailText.Placeholder">
        <item name="android:background">@color/at_light_grey</item>
    </style>

    <style name="LunchtimeHeaderText.Placeholder">
        <item name="android:background">@color/at_light_grey</item>
    </style>
</resources>